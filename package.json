{
  "name": "latex-utensils",
  "version": "0.1.0",
  "license": "MIT",
  "description": "LaTeX utilities",
  "homepage": "https://github.com/tamuratak/latex-utensils",
  "main": "./out/src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamuratak/latex-utensils.git"
  },
  "bin": {
    "luparse": "./bin/luparse"
  },
  "dependencies": {
    "commander": "^2.20.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.12.12",
    "mocha": "^6.1.4",
    "pegjs": "^0.10.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "init": "mkdir -p out/src",
    "generate": "pegjs -o out/src/latex_parser.js src/latex.pegjs",
    "compile": "tsc -p ./",
    "build": "npm run init; npm run generate && npm run compile",
    "clean": "rm -rf out/src/* out/test/*",
    "test": "mocha --ui tdd out/test/**/*.js"
  }
}

{
  "name": "latex-utensils",
  "version": "1.1.2",
  "license": "MIT",
  "description": "A LaTeX parser and utilities",
  "homepage": "https://github.com/tamuratak/latex-utensils",
  "main": "./out/src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamuratak/latex-utensils.git"
  },
  "bin": {
    "luparse": "./bin/luparse"
  },
  "dependencies": {
    "commander": "^2.20.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.12.12",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.2",
    "lodash": ">=4.17.13",
    "mocha": "^6.1.4",
    "pegjs": "^0.10.0",
    "pegjs-backtrace": "^0.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.5.3"
  },
  "files": [
    "bin/**/*",
    "out/src/**/*",
    "out/bin/**/*"
  ],
  "keywords": [
    "latex",
    "bibtex",
    "parser"
  ],
  "scripts": {
    "generate:latex": "pegjs --trace --allowed-start-rules Root,Preamble -o out/src/latex/latex_parser_with_trace.js src/latex/latex.pegjs",
    "generate:bibtex": "pegjs --trace -o out/src/bibtex/bibtex_parser_js.js src/bibtex/bibtex.pegjs",
    "generate:latex_log": "pegjs --trace -o out/src/latex_log/latex_log_parser_js.js src/latex_log/latex_log.pegjs",
    "generate": "npm run generate:latex && npm run generate:bibtex && npm run generate:latex_log",
    "compile": "tsc -p ./",
    "build": "npm run compile && npm run generate",
    "clean": "rm -rf out/src/* out/test/*",
    "test": "mocha --ui tdd out/test/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint --cache --ext .ts ."
    }
  }
}

{
  "name": "latex-utensils",
  "version": "0.1.4",
  "license": "MIT",
  "description": "A LaTeX parser and utilities",
  "homepage": "https://github.com/tamuratak/latex-utensils",
  "main": "./out/src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamuratak/latex-utensils.git"
  },
  "bin": {
    "luparse": "./bin/luparse"
  },
  "dependencies": {
    "commander": "^2.20.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.12.12",
    "mocha": "^6.1.4",
    "pegjs": "^0.10.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "files": [
    "bin/**/*",
    "out/**/*",
    "src/**/*"
  ],
  "keywords": [
    "latex",
    "parser"
  ],
  "scripts": {
    "generate:simple": "pegjs --allowed-start-rules root,preamble -o out/src/latex_parser_without_trace.js src/latex.pegjs",
    "generate:trace": "pegjs --trace --allowed-start-rules root,preamble -o out/src/latex_parser_with_trace.js src/latex.pegjs",
    "generate": "npm run generate:simple && npm run generate:trace",
    "compile": "tsc -p ./",
    "build": "npm run compile && npm run generate",
    "clean": "rm -rf out/src/* out/test/*",
    "test": "mocha --ui tdd out/test/**/*.js"
  }
}
